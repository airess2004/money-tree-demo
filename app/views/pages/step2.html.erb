	
</head>
<body>
		
		<section class="borrow-header">
			<div class="container">
				
				<div class="row">
					<div class="col-md-12">
						<h1>Get a Loan</h1>
						<h5>Fill in these form to get the rate</h5>
					</div>
				</div>
			
			</div>
		</section>
		
		<section class="step-progress-container">
			
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<ol class="step-progress">
							<li class="is-complete" data-step="1">
								About You
						  	</li>
							<li class="is-active" data-step="2">
								Financial Info
							</li>
							<li data-step="3">
								Legal Documents
							</li>
							<li data-step="4" class="progress__last">
								Review your Offer
							</li>
						</ol>
					</div>
				</div>
			</div>
		
		</section>
		
		<section class="loan-form">
			
			<div class="container">
				<div class="row">
					<div class="col-md-8">
						<h2>Fill in your financial info.</h2>
						
						<div class="smart-forms">
							<form id="smart-form" action="/pages/step3">
								<div class="form-body theme-black">
									<div class="row">
										<div class="col-md-12">
											<h3>Withdrawal loan bank account</h3>
										</div>
									</div>
									
									<div class="row">
										
										<div class="col-md-3">
											<div class="section">
												<label class="field-label colm">Account Name<em> * </em></label>
											</div><!-- end section --> 
										</div>
												
										<div class="col-md-8">
											
											<div class="row">
												<div class="col-md-6">
													<div class="section">
														<label class="field prepend-icon">
															<input type="text" name="account_first_name" id="account_first_name" class="gui-input" placeholder="Enter your first name">
															<span class="field-icon"><i class="fa fa-user"></i></span>  
														</label>
													</div><!-- end section -->
												</div>
												
												<div class="col-md-6">
													<div class="section">
														<label class="field prepend-icon">
															<input type="text" name="account_last_name" id="account_last_name" class="gui-input" placeholder="Enter your last name">
															<span class="field-icon"><i class="fa fa-user"></i></span>  
														</label>
													</div><!-- end section -->
												</div>
											</div>
											
										</div>
									</div>
									
									<div class="row">
										<div class="col-md-3">
											<div class="section">
												<label class="field-label colm">Account Number<em> * </em></label>
											</div><!-- end section --> 
										</div>
												
										<div class="col-md-4">
											<div class="section">
												<label for="account_no" class="field prepend-icon">
													<input type="text" id="account_no" name="account_no" class="gui-input" placeholder="Your account number">
													<span class="field-icon"><i class="fa fa-university"></i></span>  
												</label>
											</div><!-- end section -->
										</div>
									</div>
									
									<div class="row">
										<div class="col-md-3">
											<div class="section">
												<label class="field-label colm">Bank Name<em> * </em></label>
											</div><!-- end section --> 
										</div>
												
										<div class="col-md-4">
											<div class="section">
												<label class="field select">
													<select id="bank_name" name="bank_name" data-cb-widget-placeholder="Choose bank" 
													data-cb-widget-id="bank_name" data-cb-widget-name="bank_name">
														<option value="">Choose country</option>
														<option value="BCA">Bank BCA</option>
														<option value="Mandiri">Bank Mandiri</option>
														<option value="CIMB Niaga">Bank CIMB Niaga</option>
													</select>
												</label>
											</div><!-- end section -->
										</div>
									</div>
									
									<div class="row">
										<div class="col-md-3">
											<div class="section">
												<label class="field-label colm">Bank Branch<em> * </em></label>
											</div><!-- end section --> 
										</div>
												
										<div class="col-md-4">
											<div class="section">
												<label class="field prepend-icon">
													<input type="text" name="bank_branch" id="bank_branch" class="gui-input" placeholder="Input branch name">
													<span class="field-icon"><i class="fa fa-building"></i></span>  
												</label>
											</div><!-- end section -->
										</div>
									</div>
									
									<div class="row">
										<div class="col-md-11 text-right">
											<button type="submit" class="button btn-primary expand"> Continue <i class="fa fa-arrow-right"></i></button>
										</div>
									</div>
								</div>
							</form>
						</div>
						
					</div>
					<div class="col-md-4">
					<%= render 'layouts/stepsidebar' %>
					</div>
				</div>
			</div>
		
		</section><!--end of Home section-->
		
		
	<script type="text/javascript">
        $(function() {
			$('.auto').autoNumeric('init');
            $("#bank_name").combobox();
			$("#smart-form").validate({
					errorClass: "state-error",
					validClass: "state-success",
					errorElement: "em",
					rules: {
						account_first_name: {
								required: true
						},
						account_last_name: {
								required: true
						},
						account_no: {
								required: true,
								number: true
						},
						bank_name: {
								required: true,
						},
						bank_branch: {
								required: true,
						}		
					},
					messages:{
						account_first_name: {
								required: 'Please enter your account first name',
						},
						account_last_name: {
								required: 'Please enter your account last name',
						},
						account_no: {
								required: 'Please enter your account number',
								number: 'Please enter a VALID number'
						},	
						bank_name: {
								required: 'Please choose your bank'
						},	
						bank_branch: {
								required: 'Please enter your bank branch',
						}
					},
					highlight: function(element, errorClass, validClass) {
							$(element).closest('.field').addClass(errorClass).removeClass(validClass);
					},
					unhighlight: function(element, errorClass, validClass) {
							$(element).closest('.field').removeClass(errorClass).addClass(validClass);
					},
					errorPlacement: function(error, element) {
					   if (element.is(":radio") || element.is(":checkbox")) {
								element.closest('.option-group').after(error);
					   } else {
								error.insertAfter(element.parent());
					   }
					}
							
			});					
				
        });
    </script>
	
</body>
</html>